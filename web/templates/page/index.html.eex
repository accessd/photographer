<!-- works -->
<div id="works" class="clearfix grid">
  <%= for {category, cover} <- @categories do %>
    <figure class="effect-oscar wowload fadeInUp">
      <img src="images/portfolio/<%= cover %>" alt=""/>
        <figcaption>
            <h2><%= category.title %></h2>
            <p><br>
            <%= for photo <- category.photos do %>
                <a href="images/portfolio/<%= photo.file %>" title="<%= photo.description %>" data-gallery="#<%= category.title %>">View more</a>
            </p>
            <% end %>
        </figcaption>
    </figure>
  <% end %>
</div>
<!-- works -->

<!-- Cirlce Starts -->
<div id="about"  class="container spacer about">
<h2 class="text-center wowload fadeInUp">About me</h2>
  <div class="row">
    <div class="col-sm-12 wowload fadeInLeft">
      <h4><i class="fa fa-camera"></i>Photography</h4>
      <p>Hello! My name is Evgeniia. I'm keen on photography. Here is some of my works.</p>
    </div>
  </div>

</div>
<!-- #Cirlce Ends -->

</div>

<!--Contact Starts-->
<div id="contact" class="spacer">

<div class="container contactform center">
<h2 class="text-center wowload fadeInUp">Send me a message</h2>
  <div class="row wowload fadeInLeftBig">
      <div class="col-sm-6 col-sm-offset-3 col-xs-12">
        <%= form_tag(send_message_path(@conn, :send_message)) do %>
          <input type="text" placeholder="Name" name="name">
          <textarea rows="5" placeholder="Message" name="message"></textarea>
          <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane"></i> Send</button>
        <%= end %>
      </div>
  </div>
</div>
</div>
<!--Contact Ends-->

